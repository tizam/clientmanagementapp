<form action="/clients" method="post">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" id="" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="address">Address:</label>
    <input type="text" name="address" id="" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" name="email" id="" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="phone">Phone Number:</label>
    <input type="number" name="phone" id="" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="activity">Activity:</label>
    <input type="text" name="activity" id="" class="form-control" required>
  </div>
  <button class="btn btn-primary btn-block mb-2">Add Client</button>
</form>